pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Running build step on branch: ${env.BRANCH_NAME}"
                sh 'mvn clean package'  // or whatever build tool you use
            }
        }

        stage('Test') {
            when {
                branch 'dev'
            }
            steps {
                echo "Running tests on dev branch"
                // Add testing steps here
            }
        }

        stage('Deploy to UAT') {
            when {
                branch 'uat'
            }
            steps {
                echo "Deploying to UAT environment"
                // Add UAT deployment steps here
            }
        }

        stage('Deploy to Prod') {
            when {
                branch 'prod'
            }
            steps {
                echo "Deploying to Production"
                // Add production deployment steps here
            }
        }
    }

    post {
        always {
            echo "Pipeline finished on branch: ${env.BRANCH_NAME}"
        }
        failure {
            echo "Pipeline failed"
        }
        success {
            echo "Pipeline succeeded"
        }
    }
}
